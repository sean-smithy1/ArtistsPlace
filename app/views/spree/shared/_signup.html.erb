<%= form_for(resource, :as => :spree_user, :url => spree.registration_path, html: {class: "text-left form-horizontal margin-clear" }) do |f| %>
  <div class="form-group has-feedback">
    <%= f.label :email, "Username", class: "control-label" %>
    <%= f.text_field :email, class: "form-control", placeholder: Spree.t(:email) %>
    <i class="fa fa-user form-control-feedback"></i>
  </div>
  <div class="form-group has-feedback">
    <%= f.label :password, "Password", class: "control-label" %>
    <%= f.password_field :password, class: "form-control", placeholder: Spree.t(:password) %>
    <i class="fa fa-lock form-control-feedback"></i>
  </div>
  <div class="form-group has-feedback">
    <%= f.label :password_confirmation, "Confirm Password", class: "control-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: Spree.t(:confirm_password) %>
    <i class="fa fa-lock form-control-feedback"></i>
  </div>
  <%= f.submit Spree.t(:create), class: "btn btn-gray btn-sm"%>
<% end %>
<span class="text-center">Signup with: </span>

<ul class="social-links circle small colored clearfix">
  <li class="facebook"><a target="_blank" href="http://www.facebook.com"><i class="fa fa-facebook"></i></a></li>
  <li class="twitter"><a target="_blank" href="http://www.twitter.com"><i class="fa fa-twitter"></i></a></li>
  <li class="googleplus"><a target="_blank" href="http://plus.google.com"><i class="fa fa-google-plus"></i></a></li>
</ul>

