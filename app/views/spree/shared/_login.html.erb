<%= form_for(Spree::User.new, as: :spree_user, url: spree.create_new_session_path, html: { class: "text-left form-horizontal margin-clear" })  do |f| %>
  <div class="form-group has-feedback">
    <%= f.label :email, "Username", class: "control-label" %>
    <%= f.text_field :email, class: "form-control", placeholder: Spree.t(:email)%><i class="fa fa-user form-control-feedback"></i>
  </div>
  <div class="form-group has-feedback">
    <%= f.label :password, "Password", class: "control-label" %>
    <%= f.password_field :password, class: "form-control", placeholder: Spree.t(:password)%><i class="fa fa-lock form-control-feedback"></i>
  </div>
  <div class="checkbox">
    <label>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, Spree.t(:remember_me) %>
    </label>
  </div>
  <%= f.submit Spree.t(:login), class: "btn btn-gray btn-sm"%>
<% end %>
  
<ul>
  <li class="mt-20 mb-20"><%= link_to "Forgot your password?", recover_password_path%></li>
</ul>
<span class="text-center">Login with: </span>
<ul class="social-links circle small colored clearfix">
  <li class="facebook"><a target="_blank" href="http://www.facebook.com"><i class="fa fa-facebook"></i></a></li>
  <li class="twitter"><a target="_blank" href="http://www.twitter.com"><i class="fa fa-twitter"></i></a></li>
  <li class="googleplus"><a target="_blank" href="http://plus.google.com"><i class="fa fa-google-plus"></i></a></li>
</ul>
